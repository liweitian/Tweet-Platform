<h2>Sign In</h2>

<%= form_tag "/signin" do %>

    <p>
      <%= label_tag "account" %>
      <%= text_field_tag "account", "", autofocus: true %>
    </p>

    <p>
      <%= label_tag "password" %>
      <%= password_field_tag "password" %>
    </p>

    <p>
        <%= submit_tag "Let Me In", class: 'button' %>

        or

        <%= link_to "Cancel", "/" %>
    </p>

<% end %>
